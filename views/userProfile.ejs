<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profileUser.username %>'s Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f4f4; }
        .profile-header {
            background-color: #343a40;
            color: white;
            padding: 2rem;
            border-radius: 0.5rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/allqury">QueryApp</a>
            <div class="d-flex">
                <% if(!currentUser) { %>
                    <a href="/login" class="btn btn-outline-light me-2">Login</a>
                    <a href="/signup" class="btn btn-light">Sign Up</a>
                <% } else { %>
                    <span class="navbar-text me-3">Welcome, <%= currentUser.username %></span>
                    <a href="/logout" class="btn btn-outline-light">Logout</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="profile-header mb-4">
            <h1><%= profileUser.username %></h1>
            <p class="lead">Email: <%= profileUser.email %></p>
            <p class="lead">Role: <span class="badge bg-info"><%= profileUser.role %></span></p>
        </div>

        <!-- Chart Section -->
        <div class="card mb-4">
            <div class="card-header">
                User Activity
            </div>
            <div class="card-body">
                <% if (chartData && chartData.labels.length > 0) { %>
                    <canvas id="userActivityChart"></canvas>
                <% } else { %>
                    <p class="text-center text-muted">No activity data to display.</p>
                <% } %>
            </div>
        </div>

        <h2 class="mb-3">Queries by <%= profileUser.username %></h2>

        <% if (queries && queries.length > 0) { %>
            <% for (let query of queries) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= query.msg %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Category: <%= query.category %></h6>
                        <p class="card-text">
                            <small class="text-muted">
                                Upvotes: <%= query.upvotes %> | Downvotes: <%= query.downvotes %>
                            </small>
                        </p>
                        <a href="/allqury/<%= query._id %>" class="card-link">View Details</a>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <p><%= profileUser.username %> has not posted any queries yet.</p>
        <% } %>
    </div>

    <!-- Chart.js Library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Only run the chart script if the chartData exists and has labels
        <% if (chartData && chartData.labels.length > 0) { %>
            const ctx = document.getElementById('userActivityChart').getContext('2d');
            const userActivityChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: <%- JSON.stringify(chartData.labels) %>,
                    datasets: [{
                        label: '# of Queries by Category',
                        data: <%- JSON.stringify(chartData.data) %>,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        <% } %>
    </script>
</body>
</html>
