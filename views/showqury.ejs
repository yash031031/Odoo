<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Query Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .reply-card {
            border-left: 4px solid #198754;
            background-color: #f0fff4;
        }
        .query-card-footer {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/allqury">QueryApp</a>
            <div class="d-flex align-items-center">
                <% if(!currentUser) { %>
                    <a href="/login" class="btn btn-outline-light me-2">Login</a>
                    <a href="/signup" class="btn btn-light">Sign Up</a>
                <% } else { %>
                    <a href="/user/<%= currentUser.username %>" class="nav-link text-light me-3">My Profile</a>
                    <span class="navbar-text me-3">Welcome, <%= currentUser.username %></span>
                    <a href="/logout" class="btn btn-outline-light">Logout</a>
                <% } %>
            </div>
        </div>
    </nav>
    
    <div class="container my-4">
        <!-- Main Query Display -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Category: <strong><%= seeQury.category %></strong></span>
                <span>Posted by: <a href="/user/<%= seeQury.user %>" class="text-decoration-none"><%= seeQury.user %></a></span>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= seeQury.msg %></h5>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between">
                <div>
                    <button class="btn btn-secondary btn-sm" onclick="navigator.clipboard.writeText(window.location.href)">Share</button>
                </div>
                <a href="/allqury" class="btn btn-outline-primary btn-sm">Back to All Queries</a>
            </div>
        </div>

        <!-- Reply Form for Support Agents -->
        <% if (currentUser && currentUser.role === 'Support Agent') { %>
            <div class="card my-4">
                <div class="card-header fw-bold">
                    Submit a Reply
                </div>
                <div class="card-body">
                    <form action="/allqury/<%= seeQury._id %>/reply" method="POST">
                        <div class="mb-3">
                            <textarea class="form-control" id="replyText" name="replyText" rows="4" required placeholder="Write your reply here..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post Reply</button>
                    </form>
                </div>
            </div>
        <% } %>

        <!-- Display Replies Section -->
        <div class="mt-4">
            <h3>Replies</h3>
            <hr>
            <% if (seeQury.replies && seeQury.replies.length > 0) { %>
                <% for (let reply of seeQury.replies.reverse()) { %>
                    <div class="card reply-card mb-3">
                        <div class="card-body">
                            <p class="card-text"><%= reply.text %></p>
                        </div>
                        <div class="card-footer text-muted query-card-footer">
                            Replied by <strong><a href="/user/<%= reply.author %>" class="text-decoration-none"><%= reply.author %></a></strong> on <%= reply.createdAt.toDateString() %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="alert alert-info" role="alert">
                    No answers yet.
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
