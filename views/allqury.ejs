<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Queries</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style>
        body { font-family: Arial, sans-serif; background-color: #f8f9fa; }
        .query-container { max-width: 800px; margin: 20px auto; }
        .vote-button { background: none; border: none; padding: 0; font-size: 1.2rem; cursor: pointer; color: #555; }
        .vote-count { font-weight: bold; font-size: 1rem; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/allqury">QueryApp</a>
            <div class="d-flex align-items-center">
                <% if(!currentUser) { %>
                    <a href="/login" class="btn btn-outline-light me-2">Login</a>
                    <a href="/signup" class="btn btn-light">Sign Up</a>
                <% } else { %>
                    <a href="/user/<%= currentUser.username %>" class="nav-link text-light me-3">My Profile</a>
                    <span class="navbar-text me-3">Welcome, <%= currentUser.username %> (<%= currentUser.role %>)</span>
                    <a href="/logout" class="btn btn-outline-light">Logout</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="query-container">
        <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white rounded-3 shadow-sm">
             <h1 class="h4 mb-0">All Queries</h1>
             <a href="/addqury" class="btn btn-primary">Ask a Question</a>
        </div>
        
        <div class="controls mb-4 d-flex justify-content-end">
            <select id="categoryFilter" class="form-select w-auto" aria-label="Filter by category">
                <option value="">All Categories</option>
                <% if(locals.categories) { categories.forEach(cat => { %>
                    <option value="<%= cat %>" <%= locals.selectedCategory === cat ? 'selected' : '' %>><%= cat %></option>
                <% }) } %>
            </select>
        </div>
        
        <% if (queries && queries.length > 0) { %>
            <% for (let query of queries) { %>
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            Posted by: <a href="/user/<%= query.user %>" class="text-decoration-none"><strong><%= query.user %></strong></a>
                        </div>
                        <div>
                            <!-- Status Badge Logic -->
                            <% let statusClass = 'bg-secondary'; %>
                            <% if (query.status === 'Open') statusClass = 'bg-primary'; %>
                            <% if (query.status === 'Resolved') statusClass = 'bg-success'; %>
                            <span class="badge <%= statusClass %>"><%= query.status %></span>
                            <span class="badge bg-info text-dark"><%= query.category %></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <a href="/allqury/<%= query._id %>" class="text-decoration-none text-dark">
                            <h5 class="card-title"><%= query.msg %></h5>
                        </a>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3">
                            <div class="vote-control d-flex align-items-center gap-2">
                                <form action="/allqury/<%= query._id %>/upvote" method="POST" class="d-inline">
                                    <button type="submit" class="vote-button" aria-label="Upvote"><i class="fa-solid fa-arrow-up"></i></button>
                                </form>
                                <span class="vote-count"><%= query.upvotes %></span>
                            </div>
                            <div class="vote-control d-flex align-items-center gap-2">
                                <form action="/allqury/<%= query._id %>/downvote" method="POST" class="d-inline">
                                    <button type="submit" class="vote-button" aria-label="Downvote"><i class="fa-solid fa-arrow-down"></i></button>
                                </form>
                                <span class="vote-count"><%= query.downvotes %></span>
                            </div>
                        </div>
                        <!-- Close Button Form -->
                        <% if (currentUser && query.status !== 'Closed' && (currentUser.username === query.user || currentUser.role === 'Admin')) { %>
                            <form action="/allqury/<%= query._id %>/close" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Close Query</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="alert alert-info text-center">No queries found.</div>
        <% } %>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('categoryFilter').addEventListener('change', function() {
            const category = this.value;
            window.location.href = category ? `/allqury?category=${encodeURIComponent(category)}` : '/allqury';
        });
    </script>
</body>
</html>
